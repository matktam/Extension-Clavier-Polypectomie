{
  "manifest_version": 3,
  "name": "Clavier MK",
  "version": "2.0",
  "description": "Clavier lat√©ral repliable",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["*://secure.weda.fr/*"], 
  "background": {
    "service_worker": "mk_ext_background.js"
  },
 "content_scripts": [
    {
      "matches": ["*://secure.weda.fr/*"],
      "js": ["mk_ext_content.js"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["mk_ext_clavier.html", "mk_ext_clavier.js"],
      "matches": ["*://secure.weda.fr/*"]
    }
  ]
}



